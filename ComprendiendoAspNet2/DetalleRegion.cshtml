@using ComprendiendoAspNet2
@{


    Layout = "~/MasterPage2.cshtml";
    int id = int.Parse(Request["Id"]);
    Global.Region Model = Global.Regiones.Where(x=>x.Id==id).FirstOrDefault();


}

<h2>@Model.Nombre - @Global.Departamentos.Where(x=>x.IdRegion==id).Count() departamentos</h2>
<p>@Model.Descripcion</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th></th>
    </tr>

    @foreach (var item in Global.Departamentos.Where(x => x.IdRegion == id))
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td><a href="~/DetalleDepartamento.cshtml?Id=@item.Id" class="btn btn-info">Ver detalles</a></td>
        </tr>
    }
</table>


